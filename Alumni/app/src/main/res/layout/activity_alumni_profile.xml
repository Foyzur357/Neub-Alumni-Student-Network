<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlumniProfileActivity">

    <ImageView
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:src="@drawable/person"
        android:id="@+id/alumni_image"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alumni_image"
        android:id="@+id/alumni_name"
        android:layout_marginTop="70sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="12sp"
        android:text="Name"
        android:textSize="24sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/alumni_name"
        android:background="#33DCFF"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="10sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alumni_name"
        android:id="@+id/alumni_email"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_session_white_24dp"
        android:drawablePadding="12sp"
        android:text="Email"
        android:textSize="24sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/alumni_email"
        android:background="#33DCFF"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="10sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alumni_email"
        android:id="@+id/alumni_phone"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="12sp"
        android:text="Phone"
        android:textSize="24sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/alumni_phone"
        android:background="#33DCFF"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="10sp"
        />




</RelativeLayout>